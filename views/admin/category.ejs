    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const form = document.getElementById('form');
            const nameValue = document.getElementById('nameId');
            const descriptionValue = document.getElementById('descriptionId');
            const nameValueError = document.getElementById('nameValue');
            const descriptionValueError = document.getElementById('descriptionValueError');

            // Clear initial error messages
            nameValueError.innerText = '';
            descriptionValueError.innerText = '';

            const nameRegex = /^[A-Za-z]+$/;

            function nameValidation() {
                const name = nameValue.value.trim();

                if (!name.match(nameRegex)) {
                    nameValueError.innerText = 'Enter a valid name';
                    return false;
                }

                if (name.length === 0) {
                    nameValueError.innerText = 'Name is required';
                    return false;
                }

                nameValueError.innerText = '';
                return true;
            }

            function descriptionValidation() {
                const description = descriptionValue.value.trim();

                if (description.length === 0) {
                    descriptionValueError.innerText = 'Description is required';
                    return false;
                }

                if(description.length>100){
                     descriptionValueError.innerText='description length must be under 50 letters'
                     return false
                }

                descriptionValueError.innerText = '';
                return true;
            }

            function submitForm(event) {
                event.preventDefault();

                if (!nameValidation() || !descriptionValidation()) {
                    return false;
                } else {
                    form.submit();
                    return true;
                }
            }

            form.addEventListener('submit', submitForm);
            nameValue.addEventListener('keyup', nameValidation);
            descriptionValue.addEventListener('keyup', descriptionValidation);
        });
    </script>