<%- include('partials/header.ejs',{tab:'product'}) %>
    <section class="content-main">
        <div class="content-header">
            <div>
                <h2 class="content-title card-title">Categories </h2>
                <p>Add, edit or delete a category</p>
            </div>
            <div>
                <input type="text" placeholder="Search Categories" class="form-control bg-white">
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <form id="form" onsubmit=" return  submitForm(event)" action="/admin/create/categoty"
                            method="post">
                            <div class="mb-4">
                                <label for="product_name" class="form-label">Name</label>
                                <input type="text" placeholder="Type here" class="form-control" name="name"
                                    onkeyup="nameValidation()" id="nameId" />
                                <span id="nameValue" class="text-danger"></span>
                                <span  style="color: rgb(228, 20, 20);" > <%= message %></span>
                            </div>


                            <div class="mb-4">
                                <label class="form-label">Description</label>
                                <textarea placeholder="Type here" class="form-control" name="description"
                                    onkeyup="descriptionValidation()" id="descriptionId"></textarea>
                                <span id="descriptionValueError" class="text-danger"></span>
                            </div>
                            <div class="d-grid">
                                <button class="btn btn-primary">Create category</button>
                            </div>
                        </form>
                    </div>
                    <div class="col-md-9">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th class="text-center">#</th>
                                        
                                        <th>Name</th>
                                        <th>Description</th>
                                        <th>Status</th>
                                        <th>List/Unlist</th>
                                        <th class="text-center">Edit</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% category.forEach((element, index)=> { %>
                                        <tr>
                                            <td class="text-center">
                                                <%= index + 1 %>
                                            </td> <!-- Add a placeholder for the serial number or index -->
                                            <td>
                                                <%= element.name %>
                                            </td>
                                            <td>
                                                <%= element.description %>
                                            </td>
                                            <td>
                                                <% if (element.isblock==true) { %>
                                                    <span class="badge rounded-pill alert-success">Active</span>
                                                    <% } else { %>
                                                        <span class="badge rounded-pill alert-danger">Inactive</span>
                                                        <% } %>
                                            </td>
                                            <td>
                                                <% if (element.isblock==true) { %>
                                                    <button id="userdeleteblock" 
                                                        onclick="ListCategory('<%= element._id %>')"
                                                        class="btn btn-danger">
                                                        <%= (element.isblock===true)?'List':'Unlist'%>
                                                    </button>
                                                    <% } else { %>
                                                        <button id="userdelete"
                                                            onclick="ListCategory('<%= element._id %>')"
                                                            class="btn btn-success">
                                                            <%= (element.isblock===true)?'List':'Unlist'%>
                                                        </button>
                                                        <% } %>
                                            </td>
                                            <td class="text-center">

                                                <a href="/admin/editCategory/<%= element._id %>"><button
                                                        class="btn btn-primary">Edit</button></a>


                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                            </table>

                        </div>
                    </div> <!-- .col// -->
                </div> <!-- .row // -->
            </div> <!-- card body .// -->
        </div> <!-- card .// -->
    </section> <!-- content-main end// -->
