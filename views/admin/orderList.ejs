<%- include('partials/header.ejs',{tab:"orders"}) %>

<section class="content-main mb-5">
    <div class="content-header">
        <div>
            <h2 class="content-title card-title">Order List </h2>
        </div>
        <form id="searchForm" class="searchform">
            <div class="input-group">
                <input type="text" id="searchInput" class="form-control" placeholder="Search orders...">
                <button type="submit" class="btn btn-light bg"><i class="material-icons md-search"></i></button>
            </div>
        </form>
    </div>
    <div id="searchResults" class="card mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#ID</th>
                            <th scope="col">Name</th>
                            <th scope="col">Total</th>
                            <th scope="col">Status</th>
                            <th scope="col">Date</th>
                            <th scope="col" class="text-end">Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% orderData.forEach(element => { %>
                            <tr>
                                <td># <%= element.orderId %></td>
                                <td><%= element.userId.username %></td>
                                <td><%= element.billTotal %></td>
                                <td>
                                    <span class="badge">
                                        <select name="status" id="statusSelect_<%= element.orderId %>" onchange='statusChange("<%= element.orderId %>")'>
                                            <option value="Pending" <%= element.status==='Pending' ? 'selected' : '' %>>Pending</option>
                                            <option value="Processing" <%= element.status==='Processing' ? 'selected' : '' %>>Processing</option>
                                            <option value="Shipped" <%= element.status==='Shipped' ? 'selected' : '' %>>Shipped</option>
                                            <option value="Delivered" <%= element.status==='Delivered' ? 'selected' : '' %>>Delivered</option>
                                            <option value="Canceled" <%= element.status==='Canceled' ? 'selected' : '' %>>Canceled</option>
                                            <option value="Return" <%= element.status==='Return' ? 'selected' : '' %>>Return</option>
                                            <option value="Request" <%= element.status==='Request' ? 'selected' : '' %>>Request</option>
                                        </select>
                                    </span>
                                </td>
                                <td><%= element.orderDate.toLocaleString() %></td>
                                <td class="text-end">
                                    <a href="/admin/product/orderDetails/<%= element.orderId %>" class="btn btn-md rounded font-sm">Detail</a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div> 
        </div> 
        <div class="pagination-area pb-2 mx-2  mb-sm-5 mb-lg-0">
            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-start">
                    <% for(let i=1; i <= totalPages && i <= 5; i++) { %>
                        <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                            <a class="page-link" href="/admin/product/orderList?page=<%= i %>"><%= i %></a>
                        </li>
                    <% } %>
                    <% if (currentPage < totalPages) { %>
                        <li class="page-item">
                            <a class="page-link" href="/admin/product/orderList?page=<%= currentPage + 1 %>">Next</a>
                        </li>
                    <% } %>
                </ul>
            </nav>
        </div>
    </div> 
</section> 

