<%- include('partials/header.ejs',{tab:'userList'}) %>
    <section class="content-main">
        <div class="content-header">
            <div>
                <h2 class="content-title card-title">User List</h2>
                <p>Add, edit, or delete a user from the list</p>
            </div>
            <div>
                <input type="text" placeholder="Search Users" class="form-control bg-white">
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th class="text-center"></th>
                                <th>
                                    <h4>UserName</h4>
                                </th>
                                <th>
                                    <h4>Email</h4>
                                </th>
                                <th>
                                    <h4>Phone Number</h4>
                                </th>
                                <th>
                                    <h4>Status</h4>
                                </th>
                                <th>
                                    <h4>Action</h4>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <% user.forEach(element=> { %>
                                <tr>
                                    <td class="text-center"></td>
                                    <td>
                                        <%=element.username %>
                                    </td>
                                    <td>
                                        <%=element.Email %>
                                    </td>
                                    <td>
                                        <%=element.phoneNumber %>
                                    </td>
                                    <td>
                                        <% if (element.isblock==true) { %>
                                            <span class="badge rounded-pill alert-success">Active</span>
                                            <% } else { %>
                                                <span class="badge rounded-pill alert-danger">Inactive</span>
                                                <% } %>
                                    </td>
                                    <td>
                                        <% if (element.isblock==true) { %>
                                            <button id="userdeleteblock" onclick="Blokuser('<%= element._id %>')"
                                                class="btn btn-danger">
                                                <%= (element.isblock===true)?'Block':'Unblock'%>
                                            </button>
                                            <% } else { %>
                                                <button id="userdelete" onclick="Blokuser('<%= element._id %>')"
                                                    class="btn btn-success">
                                                    <%= (element.isblock===true)?'Block':'Unblock'%>
                                                </button>
                                                <% } %>


                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </section> <!-- content-main end// -->

    <footer class="main-footer font-xs">
        <div class="row pb-30 pt-15">
            <div class="col-sm-6">
                <script>
                    document.write(new Date().getFullYear())
                </script>
            </div>
            <div class="col-sm-6">
                <div class="text-sm-end">
                    All rights reserved
                </div>
            </div>
        </div>
    </footer>
    </main>
    <script src="/asset/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="/asset/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="/asset/js/vendors/select2.min.js"></script>
    <script src="/asset/js/vendors/perfect-scrollbar.js"></script>
    <script src="/asset/js/vendors/jquery.fullscreen.min.js"></script>
    <!-- Main Script -->
    <script src="/asset/js/main.js" type="text/javascript"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

