<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style> 
        body {
            background-image: url('/assets/imgs/shop/background/bk\ 3.jpg');
            background-repeat: no-repeat;
            background-size: cover;
            background-attachment: fixed;
            background-position: center;
            text-align: center;
            margin: 100px;
            overflow: hidden;
        }

        .forgot-password-container {
            max-width: 400px;
            margin: auto;
            background: rgba(23, 23, 23, 0.5);
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(162, 158, 158, 0.1);
            margin-top: 25%;
            color: rgb(129, 128, 128);
        }

        .forgot-password-container h2 {
            margin-bottom: 20px;
            color: rgb(129, 128, 128);
        }

        /* Set the label text color */
        .forgot-password-container label {
            color: white;
        }

        /* Set the color for the reset button */
        .reset-button {
            margin-top: 10px;
        }
    </style>
</head>

<body>
    <div class="forgot-password-container  mb-5">
        <h2>Forgot Password</h2>
        <form id="forgotPasswordForm" action="/forgotPasswordPost" method="POST">
            <p class="text-danger" id="forgotPasswordError"></p>
            <div class="mb-3">
                <label for="email" class="form-label">Email:</label>
                <input type="email" class="form-control" id="email" name="email">
                <span id="emailError"   class="text-danger"> <%= message %></span>
            </div>
    
            <button type="button" class="btn btn-primary reset-button" onclick="validateEmail()">Reset Password</button>
    
            <p class="mt-3">
                <a href="/">Back to Login</a>
            </p>
        </form>
    </div>

    
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

    <script>

        function validateEmail() {
            var email = document.getElementById('email').value;
            var emailError = document.getElementById('emailError');
            var emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

            if (email.trim() === '') {
                emailError.textContent = 'Email is required';
            } else if (!emailRegex.test(email)) {
                emailError.textContent = 'Invalid email format';
            } else {
                emailError.textContent = ''; 
                Swal.fire({
                icon: 'success',
                title: 'Reset Password',
                text: 'Reset password link sent to your email.',
                confirmButtonText: 'OK'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Submit the form
                    document.getElementById('forgotPasswordForm').submit();
                }
            });
            }
        }
    </script>

</body>

</html>
