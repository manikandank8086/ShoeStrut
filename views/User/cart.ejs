                <div class="row">
                    <div class="col-12">
                        <% if (cartData ) { %>
                            <% if (cartData.products.length>0) { %>
                                <div class="table-responsive">
                                    <table class="table shopping-summery text-center clean">
                                        <thead>
                                            <tr class="main-heading">
                                                <th scope="col">Image</th>
                                                <th scope="col">Name</th>
                                                <th scope="col">Price</th>
                                                <th scope="col">Quantity</th>
                                                <th scope="col">Subtotal</th>
                                                <th scope="col">Remove</th>
                                            </tr>


                                        </thead>
                                        <tbody>





                                            <% cartData.products.forEach(element=> { %>

                                                <tr>
                                                    <td class="image product-thumbnail"><img
                                                            src="/images/<%= element.image %>" alt="#"></td>
                                                    <td class="product-des product-name">
                                                        <h5 class="product-name"><a href="shop-product-right.html">
                                                                <%= element.title %>
                                                            </a></h5>
                                                        <p class="font-xs">
                                                            <%= element.title%><br>
                                                        </p>
                                                    </td>
                                                    <td class="price" data-title="Price"><span> <strong>₹</strong>
                                                            <%= element.Price %>
                                                        </span></td>
                                                    <td class="text-center" data-title="Stock">
                                                        <div class="">
                                                            <a onclick="quantityDown('<%= element._id %>')" class=""
                                                                style="font-size: 35px; "><b>-</b></a>
                                                            <span id="quantityValue_<%= element._id %>" class="qty-val">
                                                                <%= element.quantity %>
                                                            </span>
                                                            <a onclick="quantityUp('<%= element._id %>')" class=""
                                                                style="font-size: 20px; "><b>+</b></a>
                                                        </div>
                                                    </td>
                                                    <td class="text-right" data-title="Cart">
                                                        <% if (element.offerPrice> 0) { %>
                                                            <span id="<%= element._id %>"> <strong>₹</strong>
                                                                <%= element.offerPrice %>
                                                            </span>

                                                            <% } else { %>

                                                                <span id="<%= element._id %>"> <strong>₹</strong>
                                                                    <%= element.total %>
                                                                </span>
                                                                <% } %>
                                                    </td>
                                                    <td class="action" data-title="Remove"><a
                                                            onclick="removeCart('<%= element._id %>')"
                                                            class="text-muted"><i class="fi-rs-trash"></i></a></td>
                                                </tr>

                                                <% }) %>


                                        </tbody>

                                    </table>


                                </div>
                                <div class="cart-action text-end">

                                    <a href="/product/shop" class="btn "> <i
                                            class="fi-rs-shopping-bag mr-10"></i>Continue Shopping</a>
                                </div>
                                <div class="divider center_icon mt-50 mb-50"><i class="fi-rs-fingerprint"></i></div>
                                <div class="row mb-50">
                                    <div class="col-lg-6 col-md-12">
                                        <div class="border p-md-4 p-30 border-radius cart-totals">
                                            <div class="heading_s1 mb-3">
                                                <h4>Cart Totals</h4>
                                            </div>
                                            <div class="table-responsive">
                                                <table class="table">
                                                    <tbody>

                                                        <tr>
                                                            <td class="cart_total_label">Shipping</td>
                                                            <td class="cart_total_amount"> <i class="ti-gift mr-5"></i>
                                                                Free Shipping</td>
                                                        </tr>
                                                        <tr>
                                                            <td class="cart_total_label">Total</td>
                                                            <td class="cart_total_amount"><strong><span
                                                                        class="font-xl fw-900 text-brand"
                                                                        id="cartDataTotal">₹<%= cartData.total %>
                                                                            </span></strong></td>

                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </div>





                                            <a href="/product/checkout/verify" class="btn "> <i
                                                    class="fi-rs-box-alt mr-10"></i> Proceed To CheckOut</a>


                                        </div>
                                    </div>

                                </div>



                                <% } else { %>
                                    <h3 style="margin-bottom: 30%; margin-left: 400px;"> User have no cart Data</h3>

                                    <a style="margin-left: 43%; display: block; margin-top: -250px;"
                                        href="/product/shop">
                                        <button style=" background-color: red; color: rgb(234, 245, 245);"
                                            class="color-grey">Continue Shopping</button>
                                    </a>



                                    <% } %>



                                        <% } else { %>
                                            <h3>No products found</h3>

                                            <% } %>




                    </div>
                </div>
            </div>
        </section>
