                                                                            <%= element.pincode %><br>
                                                                                <%= element.city %> <br>
                                                                                    <p>
                                                                                        <%= element.state %>
                                                                                    </p>
                                                                                    <%= element.type %><br>
                                                                                        <%= element.address %> <br>
                                                                                            <%= element.landmark %> <br>
                                                                                                <%= element.altermatePhone
                                                                                                    %>
                                                                </address>

